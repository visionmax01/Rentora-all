{
  "name": "rentora-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:migrate": "cd packages/database && bun run migrate",
    "db:generate": "cd packages/database && bun run generate",
    "db:studio": "cd packages/database && bun run studio",
    "typesense:schema": "cd packages/types && bun run setup:schema"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "@types/node": "^20.0.0"
  },
  "packageManager": "bun@1.1.0"
}